                </div>
            </div>

            <div class="col-md-6">
                <div class="next_prod">
                    @if (cat != urls.Last())
                    {
                        <div class="next_prod_btn">
                            <i class="fa fa-long-arrow-right"></i>
                            <a href="/pages/production/@(urls.ElementAt(catnum+1))">@local["Title-"+(catnum+1).ToString()]</a>
                            <a href="/pages/production/@(urls.ElementAt(catnum+1))">@local["Next"]</a>
                            <i class="fa fa-long-arrow-right"></i>
                            <div class="line"></div>
                        </div>
                    }
                    else
                    {
                        <div class="next_prod_btn">
                            <i class="fa fa-long-arrow-right"></i>
                            <a href="/pages/Services">@local["Services"]</a>
                            <a href="/pages/Services">@local["Services"]</a>
                            <i class="fa fa-long-arrow-right"></i>
                            <div class="line"></div>
                        </div>
                    }
                    @if (cat != urls.First())
                    {
                        <div class="next_prod_btn">
                            <i class="fa fa-long-arrow-left"></i>
                            <a href="/pages/production/@(urls.ElementAt(catnum-1))">@local["Title-" + (catnum - 1).ToString()]</a>
