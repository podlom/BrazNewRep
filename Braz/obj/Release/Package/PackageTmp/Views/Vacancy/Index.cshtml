@{
    ViewBag.Title = "Вакансии";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Braz.Models.Vacancy> data = (List<Braz.Models.Vacancy>)ViewData["Vacancies"];
}
    <section id="vacancies">
        <div class="outer">
            <div class="main-part office">
                <div class="content">
                    <h2>Работа в оффисе</h2>
                    <ul>
                        @foreach(Braz.Models.Vacancy vac in data.Where(x=>x.Type==0))
                        {
                            <li>
                                <div class="link">
                                    <a href=@("/Vacancy/Index/"+vac.Url)>@vac.Header</a>
                                    <span>@vac.Header</span>
                                    <div class="more">
                                        <div class="text">@vac.Description</div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="overlay"></div>
            </div>
            <div class="main-part working">
                <div class="content">
                    <h2>Работа на производстве</h2>
                    <ul>
                        @foreach (Braz.Models.Vacancy vac in data.Where(x => x.Type == 1))
                        {
                            <li>
                                <div class="link">
                                    <a href=@("/Vacancy/Index/"+vac.Url)>@vac.Header</a>
                                    <span>@vac.Header</span>
                                    <div class="more">
                                        <div class="text">@vac.Description</div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="overlay"></div>
            </div>
        </div>
