@model Braz.Models.Vacancy
@{
    ViewBag.Title = Model.Header;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section id="vacancy">
        <div class="outer">
            <div class="main-content">
                <h2>@Model.Header</h2>
                <h3 class="price">@Model.Salary</h3>
                <div class="desc-name">
                    <h3>Описание вакансии</h3>
                </div>
                <p class="desc">@Model.Description</p>
                <div class="row">
                    <div class="col-md-12">
                        <h4>Требования</h4>
                        <ul>
                            @foreach(string req in Model.Requirements)
                            {
                                <li>@req</li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-12">
                        <h4>Обязанности</h4>
                        <ul>
                            @foreach(string dut in Model.Duties)
                            {
                                <li>@dut</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="sidebar">
                <a href="#">Отправить резюме</a>
                <div class="drag">Перетащите Ваше резюме сюда</div>
            </div>
        </div>
    </section>

    <footer>
        <div class="soc_block">
            <div class="item">
                <a href="https://www.facebook.com/braz.industries/" target="_blank">
                    <i class="fa fa-facebook"></i>
                </a>
            </div>
            <div class="item">
                <a href="">
                    <i class="fa fa-twitter"></i>
                </a>
            </div>
            <div class="item">
                <a href="">
                    <i class="fa fa-linkedin"></i>
                </a>
            </div>
            <div class="item">
                <a href="https://plus.google.com/108630417052860007244" target="_blank">
                    <i class="fa fa-google-plus"></i>
                </a>
            </div>
            <div class="item">
                <a href="https://www.youtube.com/channel/UC1T9si7nLVStmCxWFce942Q" target="_blank">
                    <i class="fa fa-youtube"></i>
                </a>
            </div>
        </div>

        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        Сopyright©2016
                    </div>
                </div>
            </div>
        </div>
    </footer>


