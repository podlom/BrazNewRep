@{
    var local = (Dictionary<string, string>)ViewData["Local"];
    ViewBag.Title = local["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<div class="statBg"></div>*@
<section class="mainStat">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="stat_title" aos="fade-down">
                    @local["Head1"]
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div id="chart1" class="ct-chart ct-perfect-fourth" aos="fade-right">
                    <div class="donYear">2013</div>
                </div>
            </div>
            <div class="col-md-6">
                <div id="chart2" class="ct-chart ct-perfect-fourth" aos="fade-left">
                    <div class="donYear">2025</div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="stat_title" aos="zoom-in">
                    @local["Head2"]
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div id="chart3" class="ct-chart ct-perfect-fourth" aos="fade-up-right">
                    <div class="donTitle">@Html.Raw(local["Already"])</div>
                </div>
            </div>
            <div class="col-md-6">
                <div id="chart4" class="ct-chart ct-perfect-fourth" aos="fade-up-left">
                    <div class="donTitle">@Html.Raw(local["NotYet"])</div>
                </div>
            </div>
        </div>



        <br>
        <br>
        <br>
        <br>
        <div class="row">
            <div class="col-md-6 lineBg">
                <div class="ct-chart ct-perfect-fourth" id="line1"></div>
            </div>
            <div class="col-md-6">
                <div class="stat_title">
                    <br>
                    <br>
                    <br>
                    @local["Ukraine1"]
<div class="descrDiv">
                  <div class="line blue1"></div>@local["import"]
                </div>
                <div class="descrDiv">
                  <div class="line red"></div>@local["export"]
                </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="stat_title">
                    <br>
                    <br>
                    <br>
                    @local["Ukraine2"]
<div class="descrDiv">
                  <div class="line violet"></div>@local["import"]]
                </div>
                <div class="descrDiv">
                  <div class="line green"></div>@local["export"]
                </div>
                </div>
            </div>
            <div class="col-md-6 lineBg">
                <div class="ct-chart ct-perfect-fourth" id="line2"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 lineBg">
                <div class="ct-chart ct-perfect-fourth" id="line3"></div>
            </div>
            <div class="col-md-6">
                <div class="stat_title">
                    <br>
                    <br>
                    <br>
                    @local["Ukraine3"]
<div class="descrDiv">
                  <div class="line blue2"></div>@local["import"]
                </div>
                <div class="descrDiv">
                  <div class="line orange"></div>@local["export"]
                </div>
                </div>
            </div>
        </div>
    </div>
</section>

